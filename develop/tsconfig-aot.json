{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist"
  },

  "files": [
    "app/modules/app.module.ts",
    "app/main-aot.ts",
    "typings/index.d.ts"
  ],

  "angularCompilerOptions": {
   "genDir": "./aot",
   "skipMetadataEmit" : true
 }
}